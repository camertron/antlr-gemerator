require 'bundler'
require 'antlr4-native'

Bundler::GemHelper.install_tasks

task :generate do
  generator = Antlr4Native::Generator.new(
    grammar_files:      <%= grammar_files_array.inspect %>,
    output_dir:         'ext/',
    parser_root_method: '<%= root_method %>'
  )

  generator.generate
end
